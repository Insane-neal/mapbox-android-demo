<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="40.73581"
        mapbox:mapbox_cameraTargetLng="-73.99155"
        mapbox:mapbox_cameraZoom="11"
        mapbox:mapbox_uiZoomGestures="false"
        mapbox:mapbox_uiScrollGestures="false"
        mapbox:mapbox_uiRotateGestures="false"
        mapbox:mapbox_uiTiltGestures="false"
        mapbox:mapbox_uiDoubleTapGestures="false"
        mapbox:mapbox_styleUrl="@string/mapbox_style_light" />

    <ImageView
        android:id="@+id/draw_crosshair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_action_crosshair"
        android:visibility="gone" />

</FrameLayout>